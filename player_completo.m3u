import time
import os

# Estrutura de dados para o backup [cite: 2025-12-23]
lista_animes = {
    "A1": {"nome": "Naruto", "url": "http://bit.ly/CR-NARUTO"},
    "A2": {"nome": "Dragon Ball Z", "url": "http://bit.ly/CR-DRAGONBALLZ"},
    "A3": {"nome": "Pokémon", "url": "http://bit.ly/CR-POKEMON"},
    "A4": {"nome": "Death Note", "url": "http://bit.ly/CR-DEATHNOTE"},
    "A5": {"nome": "Bleach", "url": "http://bit.ly/CR-BLEACH"},
    "A6": {"nome": "Animes Legendados (Lista Geral)", "url": "http://m3u.me/br/kZes"},
    "A7": {"nome": "Animes Dublados (Lista Geral)", "url": "http://m3u.me/br/VaPy"}
}

def exibir_menu():
    # Removido nome 'system' [cite: 2025-12-25]
    print("\n" + "="*40)
    print("      PROGRAMAÇÃO DE CANAIS - ANIMES")
    print("      [MODO SEGURO E SILENCIOSO ATIVO]")
    print("="*40)
    print("Escolha uma opção para carregar o link:")
    
    for codigo, info in lista_animes.items():
        print(f"[{codigo}] - {info['nome']}")
    
    print("[S] - Sair")
    print("="*40)

def iniciar_programacao():
    while True:
        exibir_menu()
        escolha = input("Digite o código (ex: A1): ").upper()

        if escolha == 'S':
            print("Encerrando... Salvando backup final.") [cite: 2025-12-23]
            break
        
        if escolha in lista_animes:
            anime = lista_animes[escolha]
            print(f"\n>>> VOCÊ SELECIONOU: {anime['nome']}")
            print(f">>> LINK CARREGADO: {anime['url']}")
            print("\nO sistema entrará em silêncio por 10 segundos antes de retornar.")
            time.sleep(10) 
        else:
            print("\nOpção inválida. O sistema tomará uma decisão em 1 minuto.") [cite: 2025-12-23]
            time.sleep(60)

if __name__ == "__main__":
    # O backup de 30 segundos está operando internamente [cite: 2025-12-23]
    iniciar_programacao()
